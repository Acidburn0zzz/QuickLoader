<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <Preference
        android:key="@string/key_publish_tile"
        android:summary="@string/pref_publish_tile_summary"
        android:title="@string/pref_publish_tile_title" />

    <PreferenceCategory
        android:key="cat_notification"
        android:title="@string/notification">
        <Preference
            android:key="@string/key_publish_notification"
            android:summary="@string/pref_publish_notification_summary"
            android:title="@string/pref_publish_notification_title" />
        <Preference
            android:key="@string/key_cancel_notification"
            android:summary="@string/pref_cancel_notification_summary"
            android:title="@string/pref_cancel_notification_title" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="cat_general"
        android:title="@string/category_general">
        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/key_auto_detect"
            android:persistent="true"
            android:summary="@string/auto_detect_summary"
            android:title="@string/auto_detect" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/key_auto_extract"
            android:persistent="true"
            android:summary="@string/auto_extract_summary"
            android:title="@string/auto_extract" />
    </PreferenceCategory>

</PreferenceScreen>
